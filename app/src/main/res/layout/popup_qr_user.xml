<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_layout"
    android:backgroundTint="@color/principal_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnCloseQRuser"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            app:srcCompat="@drawable/ic_cross_close"
            app:tint="@color/meat_brown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/fredoka_one"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Escanea tu ID"
            android:textAlignment="center"
            android:textColor="@color/meat_brown"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/qrUser"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:srcCompat="@drawable/codigo_qr_512dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:paddingLeft="18dp"
            android:text="O introduce los dÃ­gitos de tu ID personal:"
            android:textAlignment="center"
            android:textColor="@color/meat_brown"/>

        <TextView
            android:id="@+id/userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/fredoka_one"
            android:paddingLeft="15dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/meat_brown" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>

</LinearLayout>